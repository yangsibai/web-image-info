{
  "name": "Image info",
  "manifest_version": 2,
  "version": "0.2.1",
  "description": "Display image info: width, height, size",
  "icons": {
    "16": "icons/16.png",
    "20": "icons/20.png",
    "24": "icons/24.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "browser_action": {
    "default_title": "Image Info - running",
    "default_icon": "icons/48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "/style.css"
      ],
      "js": [
        "/jquery-2.0.3.min.js",
        "/index.js"
      ]
    }
  ]
}
